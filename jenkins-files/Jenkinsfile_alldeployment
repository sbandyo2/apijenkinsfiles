                sh "'/home/mesadmin/maven/apache-maven-3.5.4/bin/mvn' clean -f discovery/pom.xml"
                sh "'/home/mesadmin/maven/apache-maven-3.5.4/bin/mvn' package -f discovery/pom.xml"
                
